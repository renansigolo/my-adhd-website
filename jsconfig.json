{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "inlineSourceMap": true,
    "jsx": "react-jsx",
    "sourceRoot": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@locale/*": ["src/locale/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
