{
  "name": "my-adhd-website",
  "version": "1.0.2",
  "description": "My ADHD Website",
  "homepage": "https://myadhd.com.au",
  "bugs": {
    "url": "https://github.com/renansigolo/my-adhd-website/issues",
    "email": "renan.sigolo@gmail.com"
  },
  "license": "Apache-2.0",
  "author": "Renan Sigolo <renan.sigolo@gmail.com>",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/renansigolo/my-adhd-website.git"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "update": "npm run upgrade-interactive --latest",
    "deploy": "npm run build && firebase deploy",
    "prettier": "prettier --config ./.prettierrc.json --write './**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-intl": "^3.4.0",
    "react-scripts": "3.2.0"
  },
  "devDependencies": {
    "customize-cra": "^0.9.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.5"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">= 6.5.0",
    "yarn": "NO LONGER USED - Please use npm"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config ./.prettierrc.json --write",
      "git add"
    ]
  }
}
